---
import Base from "@layouts/Base.astro";
import { getArticlesWithoutOk, sort } from "@lib/collections/articles";

const articlesWithoutOk = sort(await getArticlesWithoutOk());
---

<Base title="Cleanup">
  <main>
    <p>These are articles have minor improvments needed or cleanups</p>
    <ol class="menu">
      {
        articlesWithoutOk.map((article) => (
          <li>
            <a href={`/${article.slug}`}>{article.data.title}</a>
          </li>
        ))
      }
    </ol>
  </main>
</Base>
