---
interface Props {
  readingTime?: string;
}

const { readingTime } = Astro.props;
---

{
  readingTime && (
    <aside id="reading">
      <img
        class="icon"
        src="/img/clock.svg"
        loading="eager"
        decoding="async"
        width="16"
        height="24"
        alt="Estimated reading time"
        title="Estimated reading time"
        width={16}
        height={24}
        loading="eager"
        decoding="async"
      />
      {readingTime}
    </aside>
  )
}
