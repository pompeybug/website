---
interface Props {
  readingTime?: string;
}

const { readingTime } = Astro.props;
---

{
  readingTime && (
    <aside id="reading" data-pagefind-ignore>
      <img
        class="icon"
        src="/img/clock.svg"
        alt="Estimated reading time"
        title="Estimated reading time"
      />
      {readingTime}
    </aside>
  )
}
