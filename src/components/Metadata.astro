---
interface Props {
  date?: Date;
}

const { date } = Astro.props;
---

{
  date && (
    <aside id="date" class="published">
      <img
        src="/img/calendar.svg"
        alt="Publication date"
        title="Publication date"
      />
      {date
        .toLocaleDateString("en-GB", {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
        })
        .replace(",", "")}
    </aside>
  )
}
