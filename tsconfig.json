{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    },
    "include": ["src"]
}